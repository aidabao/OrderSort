@{
    ViewBag.Title = "淘宝发货信息";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all">
    <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body style="padding-top:60px">
    @*<blockquote class="layui-elem-quote layui-text">
            淘宝发货订单
        </blockquote>*@

    <table class="layui-hide" id="test" lay-filter="test"></table>


    <script src="~/layui/layui.js" charset="utf-8"></script>
    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button type="button" class="layui-btn" id="test3"><i class="layui-icon"></i>上传文件</button>
        </div>
    </script>
    <script>
        layui.use(['table', 'upload'], function () {
            var table = layui.table;
            var upload = layui.upload;

            table.render({
                elem: '#test'
                , url: '/Home/GetJson'
                , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板
                , title: '订单数据'
                , totalRow: true
                , cols: [[
                    { field: 'Id', title: '序号', width: 120, edit: 'text' }
                    , { field: 'Code', title: '商家编码', width: 150, edit: 'text' }
                    , { field: 'Sku', title: '货号', edit: 'text' }
                    , { field: 'Size', title: '尺码', edit: 'text' }
                    , { field: 'Num', title: '数量', width: 80, edit: 'text', totalRow: true }
                    , { field: 'Total', title: '合计', width: 100, totalRow: true, edit: 'text' }
                ]]
                , page: true
                , response: {
                    statusCode: 200 //重新规定成功的状态码为 200，table 组件默认为 0
                }
                //, parseData: function (res) { //将原始数据解析成 table 组件所规定的数据
                //    return {
                //        "code": res.status, //解析接口状态
                //        "msg": res.message, //解析提示文本
                //        "count": res.total, //解析数据长度
                //        "data": res.data //解析数据列表
                //    };
                //}
            });
            //指定允许上传的文件类型
            upload.render({
                elem: '#test3'
                , url: '/Home/UploadFile' //改成您自己的上传接口
                , accept: 'file' //普通文件
                , exts: 'xls|xlsx'
                , acceptMime:'xls,xlsx'
                , done: function (res) {
                    if (res.code == 1) {
                        layer.msg('上传成功');
                        window.location.reload();
                    } else {
                        alert(res.msg);
                    }                    
                    console.log(res);
                }
                , error: function (res) {
                    console.log(res);
                    alert(res);
                }
            });
        });
        
        
    </script>
    
</body>
</html>